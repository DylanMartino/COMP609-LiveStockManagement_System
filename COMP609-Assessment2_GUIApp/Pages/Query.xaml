<Page x:Class="COMP609_Assessment2_GUIApp.Pages.QueryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:COMP609_Assessment2_GUIApp.Pages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"


      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    <Grid>
        <TextBlock FontSize="45" FontWeight="Bold" Foreground="White" Margin="39,157,282,0"  VerticalAlignment="Top" Height="65"><Run Language="en-nz" Text="Query Data"/></TextBlock>

        <Border Margin="0,261,0,0" CornerRadius="5" Background="{DynamicResource SecondaryBackgroundColour}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <!-- Search TextBox takes 2/3 of the width -->
                    <ColumnDefinition Width="*"/>
                    <!-- ComboBox takes 1/3 of the width -->
                </Grid.ColumnDefinitions>
                <Border CornerRadius="15,0,0,15" Background="{DynamicResource TextSecondaryColour}" Margin="20,20,0,142">
                    <TextBox
                
                Name="InBox2"
                Width="Auto"
                
                Grid.Column="0"
                md:HintAssist.Hint="        Enter a word"
                TextChanged="InBox2_TextChanged" />
                </Border>

                <Border  Background="{DynamicResource TextSecondaryColour}" Margin="10,20,33,142" Grid.Column="1">
                    <ComboBox
                
                
                x:Name="MyComboBox"
                Width="Auto"
                
                md:HintAssist.Hint="Select an option" VerticalAlignment="Top" Height="27" Grid.Column="1">
                        <ComboBoxItem Content="ID" />
                        <ComboBoxItem Content="Option 2" />
                        <ComboBoxItem Content="Option 3" />
                    </ComboBox>

                </Border>

            </Grid>


        </Border>
    </Grid>
</Page>
